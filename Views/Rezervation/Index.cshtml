@model IEnumerable<rezerviraj.si.Models.Rezervacija>

@{
    ViewData["Title"] = "Vse rezervacije";
}

<div class="container pt-5">

    <h1>Vse rezervacije</h1>

    @if (Model.Count() == 0) {
        <div class="card mt-3">
            <div class="card-header">
                Obvestilo
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                <p>Restavracija @ViewData["Naziv"] Å¡e nima nobene rezervacije.</p>
                </blockquote>
            </div>
        </div>
    } else {
        @foreach (var rezervacija in Model)
        {
            @Html.Raw(rezervacija); <br>
        }
    }
    
</div>