@model rezerviraj.si.Models.RezervationRequest

@{
    ViewData["Title"] = "Dodaj rezervacijo";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <h1>Dodaj rezervacijo</h1>
            <hr />
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="GostID" value="@Model.GostID">
                <input type="hidden" asp-for="RestavracijaID" value="@Model.RestavracijaID">
                <div class="form-group mb-4">
                    <label asp-for="RezerviranoZa" class="control-label"></label>
                    <input asp-for="RezerviranoZa" class="form-control mb-2" />
                    <span asp-validation-for="RezerviranoZa" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="StOseb" class="control-label"></label>
                    <input asp-for="StOseb" class="form-control mb-2" />
                    <span asp-validation-for="StOseb" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <input type="submit" value="Rezerviraj" class="btn btn-primary btn-lg me-2" />
                    <a asp-action="Index" asp-controller="Home">Prekliƒçi</a>
                </div>
            </form>
        </div>
    </div>
</div>