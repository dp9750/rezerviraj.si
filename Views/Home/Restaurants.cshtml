@model IEnumerable<rezerviraj.si.Models.Restavracija>

@{
    ViewData["Title"] = "Vse restavracije";
}

<div class="container py-5">
    <h1 class="mb-5">Vse restavracije</h1>

    @if (Model.Count() == 0) {
        <div class="card">
            <div class="card-header">
                Obvestilo
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                <p>Trenutno še ni dodana nobena restavracija.</p>
                </blockquote>
            </div>
        </div>
    }
    
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (Restavracija restavracija in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="https://cdn.cnn.com/cnnnext/dam/assets/170623125207-ana-ros-restaurants-ljubljana-strelec-terrace-full-169.jpg"
                    class="card-img-top" alt="img">
                    <div class="card-body">
                        <h5 class="card-title">@restavracija.Naziv</h5>
                        <p class="card-text text-secondary">
                            @restavracija.Lokacija.ToString() <br>
                            @restavracija.TelefonskaSt, @restavracija.Email
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a class="btn btn-link ps-0" asp-controller="Restaurant" asp-action="Details"
                                asp-route-id="@restavracija.Id">
                                Pokaži več
                            </a>
                            <a class="btn btn-success" asp-action="Login" asp-controller="Rezervation"
                                asp-route-id="@restavracija.Id">
                                Rezerviraj
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>