@model rezerviraj.si.Models.Restavracija

@{
    ViewData["Title"] = "Create";
}
<div class="container pt-5">

    <h1>Registriraj restavracijo</h1>

    <hr />
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control mb-2" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Geslo" class="control-label"></label>
                    <input asp-for="Geslo" class="form-control mb-2" type="password" />
                    <span asp-validation-for="Geslo" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Naziv" class="control-label"></label>
                            <input asp-for="Naziv" class="form-control mb-2" />
                            <span asp-validation-for="Naziv" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DatumRegistracije" class="control-label"></label>
                            <input asp-for="DatumRegistracije" class="form-control mb-2" />
                            <span asp-validation-for="DatumRegistracije" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="TelefonskaSt" class="control-label"></label>
                    <input asp-for="TelefonskaSt" class="form-control mb-2" />
                    <span asp-validation-for="TelefonskaSt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Pregled vseh restavracij</a>
    </div>

</div>