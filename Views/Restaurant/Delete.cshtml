@model rezerviraj.si.Models.Restavracija

@{
    ViewData["Title"] = "Izbris restavracije";
}

<div class="container pt-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <h1>Izbris</h1>

            <h3>Ste prepričani da želite izbrisati restavracijo?</h3>
            <div>
                
                <table class="table mt-4">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" colspan="2" class="text-center">Podrobnosti</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Naziv)</th>
                            <td>@Html.DisplayFor(model => model.Naziv)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Email)</th>
                            <td>@Html.DisplayFor(model => model.Email)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.DatumRegistracije)</th>
                            <td>@Html.DisplayFor(model => model.DatumRegistracije)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.TelefonskaSt)</th>
                            <td>@Html.DisplayFor(model => model.TelefonskaSt)</td>
                        </tr>
                        <tr>
                            <th scope="row">@Html.DisplayNameFor(model => model.Lokacija)</th>
                            <td>@Model.Lokacija.ToString()</td>
                        </tr>
                    </tbody>
                </table>

                <form asp-action="Delete" class="my-4">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Izbriši restavracijo" class="btn btn-danger me-3" />
                    <a asp-action="Details" asp-route-id="@Model.Id">Prekliči</a>
                </form>
            </div>
        </div>
    </div>
</div>