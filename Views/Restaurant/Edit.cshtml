@model rezerviraj.si.Models.Restavracija

@{
    ViewData["Title"] = "Urejanje restavracije";
}

<div class="container pt-4">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>Uredi</h1>
            <hr />
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Geslo">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Naziv" class="control-label"></label>
                    <input asp-for="Naziv" class="form-control" />
                    <span asp-validation-for="Naziv" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DatumRegistracije" class="control-label"></label>
                    <input asp-for="DatumRegistracije" class="form-control" />
                    <span asp-validation-for="DatumRegistracije" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="TelefonskaSt" class="control-label"></label>
                    <input asp-for="TelefonskaSt" class="form-control" />
                    <span asp-validation-for="TelefonskaSt" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <input type="submit" value="Posodobi" class="btn btn-primary btn-lg me-3" />
                    <a asp-action="Details" asp-route-id="@Model.Id">Prekliƒçi</a>
                </div>
            </form>
        </div>
    </div>
</div>