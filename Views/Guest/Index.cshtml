@model IEnumerable<rezerviraj.si.Models.Gost>

@{
    ViewData["Title"] = "Vsi gostje";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="mb-4">Vsi gostje</h1>
            <a asp-action="Create">Dodaj gosta</a>
            <br>

            @if (Model.Count() == 0) {
                <div class="card mt-3">
                    <div class="card-header">
                        Obvestilo
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>V podatkovni bazi ni nobenega gosta.</p>
                        </blockquote>
                    </div>
                </div>
            } else {
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Ime</th>
                            <th scope="col">Priimek</th>
                            <th scope="col">Email</th>
                            <th scope="col">Telefonska številka</th>
                            <th scope="col">Izbriši</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gost in Model) {
                            <tr>
                                <th scope="row">@gost.GostID</th>
                                <td>@gost.Ime</td>
                                <td>@gost.Priimek</td>
                                <td>@gost.Email</td>
                                <td>@gost.TelefonskaSt</td>
                                <td>
                                    <a class="btn btn-sm btn-danger"
                                        asp-action="Delete" asp-route-id="@gost.GostID">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>