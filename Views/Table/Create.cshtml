@model rezerviraj.si.Models.Miza

@{
    ViewData["Title"] = "Create";
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="mb-4">Dodaj mizo</h1>
            <hr />  
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RestavracijaID" value='@ViewData["RestavracijaID"]'>
                <div class="form-group mb-4">
                    <label asp-for="StMize" class="control-label"></label>
                    <input asp-for="StMize" class="form-control mb-2" />
                    <span asp-validation-for="StMize" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="StOseb" class="control-label"></label>
                    <input asp-for="StOseb" class="form-control mb-2" />
                    <span asp-validation-for="StOseb" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Dodaj mizo" class="btn btn-primary btn-lg me-2" />
                    <a asp-action="Index" asp-route-id='@ViewData["RestavracijaID"]'>Prekliƒçi</a>
                </div>
            </form>
        </div>
    </div>

</div>