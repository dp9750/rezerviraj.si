@model IEnumerable<rezerviraj.si.Models.Miza>

@{
    ViewData["Title"] = "Mize restavracije";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="mb-4">Mize restavracije @ViewData["Naziv"]</h1>
            <a asp-action="Details" asp-controller="Restaurant" 
                asp-route-id='@ViewData["RestavracijaID"]' class="mb-3">Nazaj</a>
            @if (Model.Count() == 0) {
                <div class="card">
                    <div class="card-header">
                        Obvestilo
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>Restavracija @ViewData["Naziv"] še ni dodala nobene mize.</p>
                        </blockquote>
                    </div>
                </div>
            } else {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID mize</th>
                            <th scope="col">Številka mize</th>
                            <th scope="col">Število oseb</th>
                            <th scope="col">Izbriši</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var miza in Model) {
                            <tr>
                                <th scope="row">@miza.MizaID</th>
                                <td>@miza.StMize</td>
                                <td>@miza.StOseb</td>
                                <td>
                                    <a class="btn btn-sm btn-danger"
                                        asp-action="Delete" asp-route-id="@miza.MizaID">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

<style>
    td, th {
        text-align: center;
    }
</style>