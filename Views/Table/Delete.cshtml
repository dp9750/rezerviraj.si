@model rezerviraj.si.Models.Miza

@{
    ViewData["Title"] = "Izbriši mizo";
}
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1>Izbriši mizo</h1>
            <hr />
            <p>Ali ste prepričani da želite izbrisati mizo?</p>
            <form asp-action="Delete" class="my-4">
                <input type="hidden" asp-for="@Model.MizaID" />
                <input type="submit" value="Izbriši mizo" class="btn btn-danger me-3" />
                <a asp-action="Index" asp-route-id="@Model.RestavracijaID">Prekliči</a>
            </form>
        </div>
    </div>
</div>